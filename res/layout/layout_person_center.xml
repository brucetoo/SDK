<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_person_head"/>

    <View android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:background="#F0EFF4"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="用户名"
                      android:textColor="@color/black"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="18sp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:hint="********"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="10dp"
                      android:textColor="@color/gray"
                      android:layout_toLeftOf="@+id/logout"
                      android:textSize="18sp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      android:text="注销"
                      android:id="@+id/logout"
                      android:textSize="18sp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="10dp"
                      android:textColor="@color/blue3"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="20dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="U币"
                      android:textColor="@color/black"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="18sp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:hint="********"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="10dp"
                      android:textColor="@color/gray"
                      android:layout_toLeftOf="@+id/charge"
                      android:textSize="18sp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      android:text="充值"
                      android:id="@+id/charge"
                      android:textSize="18sp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="10dp"
                      android:textColor="@color/blue3"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>


    <View android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:background="#F0EFF4"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                      android:layout_height="fill_parent"
                      android:src="@drawable/ic_launcher"
                      android:id="@+id/change_secret"
                      android:padding="3dp"
                      android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="修改密码"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/change_secret"
                      android:textSize="15sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="70dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/manage_secret"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="密保管理"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/manage_secret"
                      android:textSize="15sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="70dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/msg_center"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="消息中心"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/msg_center"
                      android:textSize="15sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>
    </LinearLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:background="#F0EFF4"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/chargein"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="充值"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/chargein"
                      android:textSize="15sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="70dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/charge_record"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="充值记录"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/charge_record"
                      android:textSize="15sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="70dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/cunsume_record"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="消费记录"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/cunsume_record"
                      android:textSize="15sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="70dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/help"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="帮助"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/help"
                      android:textSize="15sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="match_parent"
          android:background="#F0EFF4"
            />
</LinearLayout>