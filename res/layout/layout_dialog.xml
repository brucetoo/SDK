<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/edittext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView android:layout_width="fill_parent"
              android:text="密码验证"
              android:id="@+id/custom_dialog_title_tv"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="输入密码:"
                  android:textSize="15sp"
                  android:id="@+id/custom_dialog_content_tv"
                  android:gravity="center"
                  android:textColor="@color/black"
                  android:layout_height="wrap_content"/>
       <EditText android:layout_width="fill_parent"
                 android:background="@drawable/edittext"
                 android:layout_marginLeft="10dp"
                 android:hint="默认密码-123,更改密码点设置"
                 android:textColor="@color/black"
                 android:id="@+id/custom_dialog_edit_text"
                 android:textSize="15sp"
                 android:inputType="textPassword"
                 android:layout_marginRight="20dp"
                 android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:id="@+id/custom_dialog_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#D1D1D1" />
    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content">
        <Button android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/custom_dialog_confirm_btn"
                android:text="确定"
                style="@style/ButtonStyle"
                android:layout_height="40dp"/>
        <Button android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/custom_dialog_cancel_btn"
                android:text="取消"
                style="@style/ButtonStyle"
                android:layout_height="40dp"/>

    </LinearLayout>

</LinearLayout>