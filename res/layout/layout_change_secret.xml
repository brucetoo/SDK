<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_person_head"/>

    <View android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:background="#F0EFF4"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:text="当前密码:"
                      android:id="@+id/uid"
                      android:textColor="@color/black2"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="18sp"
                    />
            <EditText android:layout_width="match_parent"
                      android:layout_toRightOf="@+id/uid"
                      android:layout_marginLeft="10dp"
                      android:inputType="textPassword"
                      android:background="@null"
                      android:id="@+id/current_secret"
                      android:layout_marginTop="10dp"
                      android:hint="6-12个(字符,数字)"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>


        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:text="设置密码:"
                      android:id="@+id/uid1"
                      android:textColor="@color/black2"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="18sp"
                    />
            <EditText android:layout_width="match_parent"
                      android:layout_toRightOf="@+id/uid1"
                      android:layout_marginLeft="10dp"
                      android:background="@null"
                      android:id="@+id/new_secret"
                      android:inputType="textPassword"
                      android:layout_marginTop="10dp"
                      android:hint="6-12个(字符,数字)"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:text="确认密码:"
                      android:id="@+id/uid2"
                      android:textColor="@color/black2"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="18sp"
                    />
            <EditText android:layout_width="match_parent"
                      android:layout_toRightOf="@+id/uid2"
                      android:layout_marginLeft="10dp"
                      android:background="@null"
                      android:id="@+id/new_secret_again"
                      android:inputType="textPassword"
                      android:layout_marginTop="10dp"
                      android:hint="6-12个(字符,数字)"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:background="#F0EFF4"
                  android:layout_height="match_parent">

        <Button android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ButtonStyle"
                android:text="确定"
                android:id="@+id/secret_confirm"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"/>
        <Button android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ButtonStyle"
                android:text="取消"
                android:id="@+id/secret_cancle"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>