<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_person_head"/>

    <View android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:background="#F0EFF4"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:text="用户名"
                      android:id="@+id/username"
                      android:textColor="@color/black2"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="18sp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2154564"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/gray"
                      android:layout_toRightOf="@+id/username"
                      android:textSize="18sp"
                    />
        </RelativeLayout>
        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="20dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:text="安全级别"
                      android:id="@+id/uid"
                      android:textColor="@color/black2"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:textSize="18sp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="低"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/red1"
                      android:layout_toRightOf="@+id/uid"
                      android:textSize="18sp"
                    />
        </RelativeLayout>
    </LinearLayout>


    <View android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:background="#F0EFF4"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/change_secret"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="绑定手机"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/change_secret"
                      android:textSize="15sp"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="未绑定"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="20dp"
                      android:textColor="@color/red1"
                      android:layout_toLeftOf="@+id/arrow_right"
                      android:textSize="15sp"
                    />

            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:id="@+id/arrow_right"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="70dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/manage_secret"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="绑定邮箱"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/manage_secret"
                      android:textSize="15sp"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="未绑定"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="20dp"
                      android:textColor="@color/red1"
                      android:layout_toLeftOf="@+id/arrow_right1"
                      android:textSize="15sp"
                    />

            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:id="@+id/arrow_right1"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="70dp"
              android:background="#F0EFF4"
                />

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="40dp">
            <ImageView android:layout_width="40dp"
                       android:layout_height="fill_parent"
                       android:src="@drawable/ic_launcher"
                       android:id="@+id/msg_center"
                       android:padding="3dp"
                       android:textColor="@color/black"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="密保问题"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp"
                      android:textColor="@color/black2"
                      android:layout_toRightOf="@+id/msg_center"
                      android:textSize="15sp"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="未绑定"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="20dp"
                      android:textColor="@color/red1"
                      android:layout_toLeftOf="@+id/arrow_right2"
                      android:textSize="15sp"
                    />

            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:id="@+id/arrow_right2"
                       android:src="@drawable/arrow_right"
                       android:layout_height="fill_parent"/>
        </RelativeLayout>
    </LinearLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="match_parent"
          android:background="#F0EFF4"
            />

</LinearLayout>